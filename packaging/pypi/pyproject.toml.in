[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["python"]

[project]
name = "triqs_cpa"
authors = [
    {name = "Dylan Jones", email = "dylan.jones@uni-a.de"},
]
description = "Coherent Potential Approximation (CPA) for the TRIQS software library"
version = "@PROJECT_VERSION@"
readme = "README.md"
keywords = ["triqs", "cpa"]
requires-python = ">=3.7"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: GNU General Public License v3 (GPLv3)",
    "Operating System :: OS Independent",
]
dependencies = [
    "numpy",
    "scipy"
]

[project.urls]
"Homepage" = "https://triqs.github.io/triqs_cpa"
"Bug Tracker" = "https://github.com/triqs/triqs_cpa/issues"

# in case you want an executable hook of your app
